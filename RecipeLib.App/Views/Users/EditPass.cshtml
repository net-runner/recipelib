@using RecipeLib.Models
@model PasswordEditModel
@{
    ViewData["Title"] = "Change user password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="DoEditPass" asp-controller="Users" asp-route-id="@Model.Id" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Change password for @Model.Username</h2>
            <div class="form-group">

                <label asp-for="Password" class="form-label text-primary fs-3"></label>
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <div class="w-100">
                    <input type="submit" value="Change password" class=" w-100 mt-5 btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>