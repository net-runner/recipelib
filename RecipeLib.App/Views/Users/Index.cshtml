@model List<User>
@{
    ViewData["Title"] = "Users";
}
<div class="container">
    <div>
        <h2> Users</h2>
    </div>
    <div class="text-center align-self-md-center">
        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="row mb-3 card-glass text-center border-2 border-primary border border p-3 rounded-3">
                <div class="col text-center align-items-center justify-content-center my-auto">
                    <p class="float-lg-start m-2 text-light">@Model[i].Email</p>
                </div>
                <div class="col text-center align-items-center justify-content-center my-auto">
                    <p class="m-2 text-light">@Model[i].UserName</p>
                </div>
                <div class="col my-auto text-nowrap">
                    <a class="btn btn-outline-success" asp-action="EditPass" asp-controller="Users"
                    asp-route-id="@Model[i].Id"><i class="bi bi-lock"></i> Change Password </a>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Users"
                    asp-route-id="@Model[i].Id"><i class="bi bi-pen-fill"></i> Edit </a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Users"
                    asp-route-id="@Model[i].Id"><i class="bi bi-backspace-reverse-fill"></i></a>
                </div>
            </div>
        }
    </div>
</div>