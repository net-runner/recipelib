@model RecipeLib.Models.LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "./_AuthLayout.cshtml";
}

<div class="row">
    <section>
        <form id="login" asp-action="LoginUser" method="post">
            <h2>Use a local account to log in.</h2>
            <hr />

            <div class="form-floating">
                <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Username" class="form-label"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3 mb-4">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">Login failed:</div>
            <div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </form>
    </section>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
