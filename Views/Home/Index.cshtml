    <div class="d-flex flex-row categoryrow mb-5 flex-wrap">
        <div onclick="clickCategory('all')"
            class="col categoriez  btn-primary opacity-75 m-1 text-center align-items-center justify-content-center">

            <p class="m-2"><i class="bi btico bi-bullseye me-2 btico-all"></i>All</p>
        </div>
    @foreach (var category in @Model.categories)
    {
                <div onclick="clickCategory('@category.Name.Replace(' ','-').ToLower()')" class="col categoriez  btn-primary opacity-75 m-1 text-center align-items-center justify-content-center text-nowrap">
                    <p class="m-2"><i class="bi btico bi-bullseye me-2 btico-@category.Name.Replace(' ','-').ToLower()"></i>@category.Name</p>
                </div>
