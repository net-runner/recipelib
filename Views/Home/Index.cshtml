@model RecipeLib.Models.HomeModel
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Recipes";
    List<string> authors = new();
    for (var i = 0; i < Model.recipes.Count; i++)
    {
        var user = await UserManager.FindByIdAsync(Model.recipes[i].AuthorId);
        authors.Add(user.UserName);
    }

}

<div class="container">
    <div class="row mb-3">
        <div onclick="clickCategory('all')"
            class="col btn-primary opacity-75 m-1 text-center align-items-center justify-content-center my-auto">
            
            <p class="m-2"><i class="bi btico bi-bullseye me-2 btico-all"></i>All</p>
        </div>
        @foreach (var category in @Model.categories)
        {
            <div onclick="clickCategory('@category.Name.Replace(' ','-').ToLower()')"
            class="col btn-primary opacity-75 m-1 text-center align-items-center justify-content-center my-auto text-nowrap">
                <p class="m-2"><i class="bi btico bi-bullseye me-2 btico-@category.Name.Replace(' ','-').ToLower()"></i>@category.Name</p>
            </div>
        }
    </div>
    <div class="container">
        <div class="text-center align-self-md-center">
            <div class="row mb-1 border-2 border-bottom border-dark mb-4">
                <div class="col text-center align-items-center justify-content-center my-auto">
                    <p class="m-2 text-white"><i class="bi bi-receipt"></i> Recipe name</p>
                </div>
                <div class="col text-center align-items-center justify-content-center my-auto">
                    <p class="m-2 text-white"><i class="bi bi-x-diamond"></i> Category Name</p>
                </div>
                <div class=" col text-center    align-items-center justify-content-center my-auto">
                    <p class="m-2 text-white"><i class="bi bi-person-bounding-box"></i> Author</p>
                </div>
                <div class="col text-center align-items-center justify-content-center my-auto">
                    <p class="m-2 text-white"><i class="bi bi-egg"></i> Kcal</p>
                </div>
                @if (User.IsInRole("Administrator") || User.IsInRole("RecipeMaster"))
                {
                    <div class="col m-2 text-center align-items-center justify-content-center my-auto">
                        <a class="btn btn-md btn-success text-white" asp-controller="Recipe" asp-action="Create"><i
                            class="bi bi-patch-plus-fill"></i> New </a>
                    </div>
                }
            </div>
            @for (var i = 0; i < Model.recipes.Count; i++)
            {
                <div 
                class="row card-glass  mb-3 text-center border-2 border-primary border border p-3 rounded-3 recipez @Model.categories.Find(cat => cat.Id == Model.recipes[i].CategoryId).Name.Replace(' ','-').ToLower()">
                    <div class="col text-center align-items-center justify-content-center my-auto">
                        <p class="m-2 text-white">@Model.recipes[i].Name</p>
                    </div>
                    <div class="col text-center align-items-center justify-content-center my-auto">
                        <p class="m-2 text-white">@Model.categories.Find(cat => cat.Id == Model.recipes[i].CategoryId).Name</p>
                    </div>
                    <div class="col text-center align-items-center justify-content-center my-auto">
                        <p class="m-2 text-white">@authors[i]</p>
                    </div>
                    <div class="col text-center align-items-center justify-content-center my-auto">
                        <p class="m-2 text-white" >@Model.recipes[i].kcal</p>
                    </div>
                    @if (User.IsInRole("Administrator") || User.IsInRole("RecipeMaster"))
                    {
                        <div class="col align-items-center justify-content-center my-auto text-nowrap">
                            <a class="btn btn-sm btn-outline-primary " asp-action="Edit" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"><i class="bi bi-pen-fill"></i> Edit </a>
                            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"> Details </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"><i class="bi bi-backspace-reverse-fill"></i></a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

</div>

<script type="text/javascript">
    console.log("Hello from JS");
            $(`.btico-all`).css('display', 'inline-block');
            
            const clickCategory = (category) => {
            $(`.btico`).each((index, element) => {
                $(element).css('display', 'none');
            });
            if(category == "all"){
            $(`.btico-all`).css('display', 'inline-block');
            $(`.recipez`).each((index, element) => {
                $(element).css('display', 'flex');
            });
            }else{


            $(`.btico-${category}`).css('display', 'inline-block');
            $(`.recipez`).each((index, element) => {
                $(element).css('display', 'none');
            });
         
            $(`.${category}`).each((index, element) => {
                console.log(element);
                $(element).css('display', 'flex');
            });
            }

        };
</script>
