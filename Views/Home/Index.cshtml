@if (User.IsInRole("Administrator") || User.IsInRole("RecipeMaster"))
{
                        <div class="col m-2 text-center align-items-center justify-content-center my-auto">
                            <a class="btn btn-md btn-success rounded-pill text-white" asp-controller="Recipe" asp-action="Create"><i
                            class="bi bi-patch-plus-fill"></i> New </a>
                        </div>
}
<div class="d-flex justify-content-between flex-row flex-wrap w-100 reciperow">

    @for (var i = 0; i < Model.recipes.Count; i++)
    {
                    <div class="d-inline-flex mb-5  card overflow-hidden   card-glass text-center border-2 border-primary border border p-0  rounded-3 recipez @Model.categories.Find(cat => cat.Id == Model.recipes[i].CategoryId).Name.Replace(' ','-').ToLower()">
                        <div class="row card-glass">
                            <img src="@Model.recipes[i].ImgCard" class="img-fluid rb"/>

                        </div>

                        <div class="w-auto d-flex flex-row align-self-center text-center align-content-center align-items-center justify-content-center my-auto">

                            <p class="m-2 text-white" >@Model.recipes[i].kcal </p>
                            <p class="m-2 text-light opacity-50">kcal</p>
                        </div>
                        <div class=" text-start ms-2 mt-2 align-items-center justify-content-center my-auto">
                            <h5 class="m-2 text-white">@Model.recipes[i].Name</h5>
                        </div>

                        <div class="row ms-2  text-start align-items-center justify-content-start my-auto">
                            <p class="me-2 w-25 text-white text-nowrap"><i class="bi bi-person-bounding-box"></i> Author: @authors[i] </p>
                        </div>
                        <div class=" text-center align-items-center justify-content-center my-auto">

                        </div>
            @if (User.IsInRole("Administrator") || User.IsInRole("RecipeMaster"))
            {
                                <div class="col align-items-center justify-content-center my-auto text-nowrap">
                                    <a class="btn btn-sm btn-outline-primary " asp-action="Edit" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"><i class="bi bi-pen-fill"></i> Edit </a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"> Details </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-controller="Recipe"
                        asp-route-id="@Model.recipes[i].Id"><i class="bi bi-backspace-reverse-fill"></i></a>
                                </div>
            }
                        <div class="w-100 text-nowrap align-self-center text-center bg-primary ind">
                             <p class="m-2 fs-6 text-white ">@Model.categories.Find(cat => cat.Id == Model.recipes[i].CategoryId).Name</p>
                        </div>
                    </div>
    }
</div>

