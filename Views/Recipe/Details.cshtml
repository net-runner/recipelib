@model Recipe
@{
    ViewData["Title"] = "Recipe details";
}
<div class="container  super-card card align-self-center w-50 mt-5">
    <div class="row">
        <div class="col ps-4 pt-5">
            <h1>@Model.Name</h1>
            <p class="text-light">Kcal: @Model.kcal</p>
        </div>
        <div class="col flex-1 pt-3">
            <img class="card-img align-self-end rounded-circle img-fluid" src="@Model.ImgSmall" />
        </div>
    </div>


    <div>
        <h3 class="ms-3">Ingredients:</h3>
        <ul>
            @foreach (var item in Model.Ingredients)
            {
                <li>
                    <p class="text-light">@item.ammount @item.name</p>
                </li>
            }
        </ul>
    </div>
    <div>
        <h3 class="ms-3">Instructions:</h3>
        <ul>
            @foreach (var item in Model.Method)
            {
                <li>
                    <p class="text-light">@item</p>
                </li>
            }
        </ul>
    </div>
    <div class="footer mt-3 text-center">
        <h4>Enjoy!</h4>
    </div>
</div>